<p id="notice"><%= notice %></p>

<figure>
  <%= image_tag @movie.poster_image_url(:original), alt: "Poster for #{@movie.title}", width: 500 if @movie.poster_image.present? %>
</figure>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Year released:</strong>
  <%= @movie.year_released %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>
